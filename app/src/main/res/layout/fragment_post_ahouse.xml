<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PostAHouseFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_house_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/house4"
            android:layout_marginStart="45dp"/>
        <Button
            android:id="@+id/post_house_uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="textImeMultiLine"
            android:text="Upload"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:background="@drawable/button_green"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />
     <!--   <Button
            android:id="@+id/post_house_cameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="textImeMultiLine"
            android:text="Camera"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:background="@drawable/button_green"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textSize="20sp"/>-->

    </LinearLayout>
<ScrollView
    android:id="@+id/post_house_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="20dp"
    >
    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

<EditText
    android:id="@+id/post_house_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textImeMultiLine"
    android:hint="House Name"
    android:textAlignment="center"
    android:drawableStart="@drawable/edit_house4"
    android:textColor="@color/colorPrimaryDark"
    android:textStyle="bold"
    android:background="@drawable/inputs"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:padding="6dp"
    android:layout_marginTop="10dp"
    />
       <EditText
           android:id="@+id/post_house_street"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textImeMultiLine"
           android:hint="Street"
           android:layout_below="@id/post_house_name"
           android:textAlignment="center"
           android:drawableStart="@drawable/edit_street"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:background="@drawable/inputs"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="6dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:id="@+id/post_house_city"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textImeMultiLine"
           android:hint="City"
           android:layout_below="@id/post_house_street"
           android:textAlignment="center"
           android:drawableStart="@drawable/edit_city"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:background="@drawable/inputs"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="6dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:id="@+id/post_house_country"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textImeMultiLine"
           android:hint="Country"
           android:layout_below="@id/post_house_city"
           android:textAlignment="center"
           android:drawableStart="@drawable/edit_country"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:background="@drawable/inputs"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="6dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:id="@+id/post_house_rooms"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="number"
           android:hint="Number of Rooms"
           android:layout_below="@id/post_house_country"
           android:textAlignment="center"
           android:drawableStart="@drawable/edit_rooms"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:background="@drawable/inputs"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="6dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:id="@+id/post_desc"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="number"
           android:hint="Number of Housemates"
           android:layout_below="@id/post_house_rooms"
           android:textAlignment="center"
           android:drawableStart="@drawable/edit_housemates"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:background="@drawable/inputs"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="6dp"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:id="@+id/post_room_rent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="number"
           android:hint="House Rent"
           android:layout_below="@id/post_desc"
           android:textAlignment="center"
           android:drawableStart="@drawable/edit_rent"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:background="@drawable/inputs"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
           android:padding="6dp"
           android:layout_marginTop="10dp"
           />
       <LinearLayout
           android:id="@+id/scroll_linearview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_below="@id/post_room_rent">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="34dp"
               android:text="House Location"
               android:textAlignment="textStart"
               android:textSize="18sp"
               android:textStyle="bold" />
           <Button
              android:id="@+id/post_house_locationButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:inputType="textImeMultiLine"
               android:text="Get Location"
               android:textAlignment="center"
               android:textColor="@android:color/background_light"
               android:textStyle="bold"
               android:background="@drawable/button_green"
               android:layout_marginStart="45dp"
               android:layout_marginEnd="15dp"
               android:padding="6dp"
               android:layout_marginTop="10dp"
               android:textAllCaps="false"
               android:textSize="20sp"/>
       </LinearLayout>

       <Button
           android:id="@+id/post_house_saveButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/scroll_linearview"
           android:layout_centerHorizontal="true"
           android:layout_marginStart="45dp"
           android:layout_marginLeft="50dp"
           android:layout_marginTop="6dp"
           android:layout_marginEnd="15dp"
           android:layout_marginRight="1dp"
           android:background="@drawable/button_green"
           android:inputType="textImeMultiLine"
           android:padding="6dp"
           android:text="Save"
           android:textAlignment="center"
           android:textAllCaps="false"
           android:textColor="@android:color/background_light"
           android:textSize="20sp"
           android:textStyle="bold" />

       <Button
           android:id="@+id/add_room"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/scroll_linearview"
           android:layout_marginStart="-15dp"
           android:layout_toEndOf="@+id/post_house_saveButton"
           android:text="Add a room" />

       <!-- android:layout_below="@id/set_profile_image"-->

   </RelativeLayout>

</ScrollView>
</RelativeLayout>