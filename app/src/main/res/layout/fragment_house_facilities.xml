<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HouseFacilitiesFragment">

    <ScrollView
        android:id="@+id/post_house_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/transport_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/request_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Request Transport"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="23dp"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />

                <Button
                    android:id="@+id/transport_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make ReQUEST"
                    android:paddingTop="15dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/laundry_linearLayout"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/request_laundry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Laundry Services"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="23dp"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Laundry Date"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="23dp"
                        android:textAlignment="textEnd"
                        android:textSize="17sp"
                        />
                    <Button
                        android:id="@+id/date_button"
                        android:layout_below="@id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Date"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="60dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Laundry Time"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="23dp"
                        android:textAlignment="textEnd"
                        android:textSize="17sp"
                        />
                    <Button
                        android:id="@+id/time_button"
                        android:layout_below="@id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Time"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="60dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/message_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="60dp"
                        android:visibility="visible"
                        />
                    <TextView
                        android:id="@+id/Or"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="OR"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:textAlignment="textEnd"
                        android:textSize="17sp"
                        />
                    <Button
                        android:id="@+id/call_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CALL"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="30dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/payments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Payment Dates"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="23dp"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Rent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/rent_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="date"
                            android:layout_marginLeft="250dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/security"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Security"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/security_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="date"
                            android:layout_marginLeft="250dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Water"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/water_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="date"
                            android:layout_marginLeft="250dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/trash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Trash"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/trash_due"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="date"
                            android:layout_marginLeft="250dp"
                            android:layout_marginRight="23dp"
                            android:textAlignment="textEnd"
                            android:textSize="17sp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>